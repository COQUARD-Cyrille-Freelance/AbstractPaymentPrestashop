{
    "name": "coquardcyr/abstract-payment-prestashop",
    "description": "An asbract layer for implementing payment faster",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "COQUARD Cyrille",
            "email": "coquardcyr@gmail.com"
        }
    ],
    "require": {
        "prestashop/php-dev-tools": "~3.0",
        "friendsofphp/php-cs-fixer": "^2.16"
    },
    "autoload": {
        "psr-4": {
            "CoquardCyrilleFreelance\\AbstractPaymentPrestashop\\": "src/"
        },
        "classmap": [
        ],
        "exclude-from-classmap": []
    },
    "config": {
        "preferred-install": "dist",
        "prepend-autoloader": false
    },
    "scripts": {
        "set-license-header": [
            "@php ./vendor/bin/header-stamp --license=\"licence.txt\" --exclude=\".github,node_modules,vendor\""
        ],
        "lint": "php-cs-fixer fix --diff --dry-run",
        "fix": "php-cs-fixer fix"
    }
}
